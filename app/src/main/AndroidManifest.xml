<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="map.net.netmapscanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="map.net.netmapscanner.activities.LoginActivity" />
        <activity android:name="map.net.netmapscanner.activities.FacilitiesActivity" />
        <activity
            android:name="map.net.netmapscanner.activities.StartActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="map.net.netmapscanner.activities.ZonesActivity" />
        <activity android:name="map.net.netmapscanner.activities.AcquisitionsActivity" />
        <activity android:name="map.net.netmapscanner.activities.PredictZoneActivity" />
    </application>

</manifest>